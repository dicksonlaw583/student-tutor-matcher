<h1>Full Course Listing</h1>

<table class="table_design">
  <thead>
    <tr>
      <th>Course code</th>
      <th>Name</th>
      <th>Taught by</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.course_code %></td>
        <td><%= course.name %></td>
        <td><%= course.professor_name %></td>
        <td><%= course.description %></td>
        <td><%= sexybutton 'Show', course, "search" %></td>
        <td><%= sexybutton 'Edit', edit_course_path(course), "edit" %></td>
        <td><%= sexybutton 'Destroy', course, "delete", confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= sexybutton 'New Course', new_course_path, "add" %>
